<div class="row">
    <div class="col-md-12">
        <div class="card card-plain">
            <div class="card-header card-header-primary">
                <h4 class="card-title mt-0"> Students allocated </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="">
                            <th>
                                No. 
                            </th>
                            <th>
                                Name 
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Allocated to
                            </th>
                            <th>
                                Action
                            </th>
                        </thead>
                        <tbody>
                            <% allocates.forEach(allocate => { %>
                                <% allocate.students.forEach((student, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index+1 %> 
                                        </td>
                                        <td>
                                            <%= student.firstname + " " + student.lastname %> 
                                        </td>
                                        <td>
                                            <%= student.address + ", " + student.city + ", " + student.country%> 
                                        </td>
                                        <td>
                                            <%= student.phone %> 
                                        </td>
                                        <td>
                                            <%= student.email %> 
                                        </td>
                                        <td>
                                            Allocated to 
                                            <a href=""><%= allocate.tutor.firstname %> </a>
                                        </td>
                                        <td >
                                            <a href="/student-detail/<%= student._id %>" title="View detail">
                                                <span class="material-icons">
                                                    details
                                                </span>
                                            </a>
                                            <a href="/tutor-reallocate/<%= allocate._id %>/<%= student._id %>" title="Reallocate">
                                                <span class="material-icons">
                                                    close
                                                </span>
                                            </a>
                                            
                                        </td>
                                    </tr>
                                <% }) %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card card-plain">
            <div class="card-header card-header-primary">
                <h4 class="card-title mt-0">Students unallocated </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="">
                            <th>
                                No. 
                            </th>
                            <th>
                                Name 
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Action
                            </th>
                        </thead>
                        <tbody>
                            <% studentUnAllocated.forEach((student, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index+1 %> 
                                    </td>
                                    <td>
                                        <%= student.firstname + " " + student.lastname %> 
                                    </td>
                                    <td>
                                        <%= student.address + ", " + student.city + ", " + student.country%> 
                                    </td>
                                    <td>
                                        <%= student.phone %> 
                                    </td>
                                    <td>
                                        <%= student.email %> 
                                    </td>
                                    <td >
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

</div>